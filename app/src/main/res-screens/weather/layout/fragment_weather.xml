<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="@string/searchViewHint" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetWeather"
        android:layout_width="@dimen/weatherButtonWidth"
        android:layout_height="@dimen/weatherButtonHeight"
        android:layout_margin="@dimen/weatherDefaultPadding"
        android:text="@string/btnGetWeather" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerForeCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/weatherDefaultPadding"
        android:paddingRight="@dimen/weatherDefaultPadding"
        android:scrollbars="vertical" />
</androidx.appcompat.widget.LinearLayoutCompat>
